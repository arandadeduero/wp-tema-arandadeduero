{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": ["eslint:recommended", "prettier"],
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "globals": {
        "wp": "readonly",
        "wpData": "readonly",
        "ArandaTheme": "readonly",
        "NavigationMenu": "readonly"
    },
    "rules": {
        "no-console": [
            "warn",
            {
                "allow": ["warn", "error"]
            }
        ],
        "no-unused-vars": [
            "warn",
            {
                "args": "after-used"
            }
        ],
        "prefer-const": "warn",
        "no-var": "warn",
        "eqeqeq": ["warn", "always"],
        "semi": ["warn", "always"],
        "quotes": [
            "warn",
            "single",
            {
                "avoidEscape": true
            }
        ],
        "indent": [
            "warn",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "prettier/prettier": "warn"
    }
}
