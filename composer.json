{
    "name": "arandadeduero/wp-tema-arandadeduero",
    "type": "wordpress-theme",
    "description": "Modern WordPress theme for Aranda de Duero. Built with vanilla JavaScript, Bootstrap 5, and modern CSS.",
    "keywords": [
        "WordPress",
        "Themes",
        "Bootstrap 5",
        "Modern JavaScript"
    ],
    "homepage": "https://www.arandadeduero.es/",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Ayuntamiento de Aranda de Duero",
            "homepage": "https://www.arandadeduero.es/"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0.0",
        "php-parallel-lint/php-parallel-lint": "^1.4.0",
        "squizlabs/php_codesniffer": "^3.7.0",
        "wp-coding-standards/wpcs": "^3.0.0",
        "phpstan/phpstan": "^1.10.0"
    },
    "scripts": {
        "lint": [
            "@lint:wpcs",
            "@lint:php"
        ],
        "lint:wpcs": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs --colors --standard=phpcs.xml.dist",
        "lint:php": "@php ./vendor/bin/parallel-lint --exclude .git --exclude vendor --exclude node_modules .",
        "phpstan": "@php ./vendor/bin/phpstan analyze --level=7"
    },
    "support": {
        "issues": "https://github.com/arandadeduero/wp-tema-arandadeduero/issues",
        "source": "https://github.com/arandadeduero/wp-tema-arandadeduero"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
