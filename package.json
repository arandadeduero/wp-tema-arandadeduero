{
  "name": "aranda-de-duero-theme",
  "version": "2.0.0",
  "description": "Modern WordPress Theme for Aranda de Duero. Built with vanilla JavaScript, modern CSS, and Bootstrap 5.",
  "author": "Ayuntamiento de Aranda de Duero",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "WordPress",
    "Theme",
    "Bootstrap 5",
    "Modern JavaScript",
    "Responsive"
  ],
  "homepage": "https://www.arandadeduero.es/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arandadeduero/wp-tema-arandadeduero.git"
  },
  "bugs": {
    "url": "https://github.com/arandadeduero/wp-tema-arandadeduero/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@wordpress/scripts": "^28.0.0",
    "archiver": "^6.0.1",
    "autoprefixer": "^10.4.17",
    "browser-sync": "^3.0.1",
    "cssnano": "^6.1.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "postcss": "^8.4.33",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.1.0",
    "stylelint": "^16.3.1",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-prettier": "^4.0.2",
    "terser": "^5.26.0"
  },
  "scripts": {
    "start": "npm run watch",
    "watch": "browser-sync start --server --files '*.php, js/*.js, css/*.css, style.css'",
    "watch:js": "eslint js --fix --quiet || true",
    "build": "npm run build:js && npm run lint",
    "build:js": "eslint js --max-warnings 0",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:php",
    "lint:js": "eslint js --report-unused-disable-directives",
    "lint:css": "stylelint 'css/**/*.css' --fix",
    "lint:php": "composer run lint:php",
    "format": "npm run format:js && npm run format:css",
    "format:js": "prettier --write 'js/**/*.js'",
    "format:css": "prettier --write 'css/**/*.css'",
    "compile:rtl": "rtlcss style.css style-rtl.css",
    "clean": "rm -rf node_modules dist *.css.map",
    "release": "npm run build && node scripts/build-release.js",
    "test": "npm run lint"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "prettier": {
    "printWidth": 100,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "always"
  }
}

